<!DOCTYPE html>
<html>
  {{> head}}
    <body>
        {{> header}}
      <main>
<h2>{{title}}</h2>

<article>
    <ul>
        {{#each collections.posts}}
            <li>
                <h3><a href="../{{this.path}}">{{this.title}}</a></h3>
                <article>
                {{#unless this.abstract}}
                  {{safe excerpt}}
                {{else}}
                  {{this.abstract}}
                {{/unless}}
                </article>
            </li>
        {{/each}}
    </ul>
</article>
      </main>
        {{> footer}}
    </body>
</html>