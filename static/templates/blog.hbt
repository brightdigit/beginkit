{{> header}}
<h2>{{title}}</h2>

<article>
    <ul>
        {{#each collections.posts}}
            <li>
                <h3>{{this.title}}</h3>
                <article>
                {{#unless this.abstract}}
                  {{excerpt}}
                {{else}}
                  {{this.abstract}}
                {{/unless}}
                </article>
            </li>
        {{/each}}
    </ul>
</article>

{{> footer}}