<!DOCTYPE html>
<html>
<head>
  {{> head}}
</head>
<body class="email index">
  <div id="page-wrapper">
    
    <div id="main" class="wrapper style1">
                    <div class="container">

                        <header class="major">
                             <img class="featured" src="/assets/images/{{this.image}}">
                            <h2>{{this.title}}</h2>
                            <p class="no meta">
                            {{#intl locales="en-US"}}{{formatDate this.issue_date day="numeric" month="long" year="numeric" locale="en-us"}}{{/intl}}
                            </p>
                            <p class="date meta">
                            Issue #{{this.no}}
                            </p>
                             <article class="email-content">
                              {{ safe contents }}
                              </article>
                        </header>
                        <!-- Content -->
                        <article>

    <ul>
        {{#each (limit collections.posts 3 0)}}
            <li>
                <img class="featured" src="/assets/images/{{this.image}}">
                <h3><a href="../{{this.path}}">{{this.title}}</a></h3>
                <h4>

                {{#unless this.date}}
                DATE ERROR
                {{else}}
                {{#intl locales="en-US"}}{{formatDate this.date day="numeric" month="long" year="numeric" locale="en-us"}}{{/intl}}
                {{/unless}}
                </h4>
                <article>
                <p>
                {{#unless this.abstract}}
                  {{strip excerpt}}
                {{else}}
                  {{this.abstract}}
                {{/unless}}
                </p>
                </article>
            </li>
        {{/each}}
    </ul>
</article>
{{#if this.pagination}}
    <nav class="pagination">
        {{#if this.pagination.next}}
            <a href="/{{this.pagination.next.path}}">&lt; Prev</a>
        {{/if}}

        {{#if this.pagination.prev}}
            <a href="/{{this.pagination.prev.path}}">Next &gt;</a>
        {{/if}}
    </nav>
{{/if}}
                            

                    </div>
                </div>
    
    {{> footer}}
  </div>
  
</body>
</html>